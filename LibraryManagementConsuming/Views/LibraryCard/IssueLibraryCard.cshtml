@model LibraryCard

<h2>Issue Library Card</h2>

<form asp-action="IssueLibraryCard" method="post">
    <div class="form-group">
        <label for="CardNumber">Card Number</label>
        <input type="text" class="form-control" asp-for="CardNumber" required />
    </div>
    <div class="form-group">
        <label for="UserId">User ID</label>
        <input type="number" class="form-control" asp-for="UserId" required />
    </div>
    <button type="submit" class="btn btn-primary">Issue Card</button>
</form>

